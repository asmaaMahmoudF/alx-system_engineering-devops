#!/usr/bin/env bash
# Function to get DNS information

get_dns_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"

    # Get the A record for the full domain
    record=$(dig +short "${full_domain}")

    if [ -z "$record" ]; then
        echo "No DNS record found for ${full_domain}"
    else
        echo "The subdomain ${subdomain} is an A record and points to ${record}"
    fi
}

# Main script logic
domain=$1
subdomain=$2

if [ -z "$domain" ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

if [ -z "$subdomain" ]; then
    # If no subdomain is provided, check for all required subdomains
    for sub in "www" "lb-01" "web-01" "web-02"; do
        get_dns_info "$domain" "$sub"
    done
else
    # If a specific subdomain is provided, check only that subdomain
    get_dns_info "$domain" "$subdomain"
fi
